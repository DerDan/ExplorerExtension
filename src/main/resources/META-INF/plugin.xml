<idea-plugin>
    <id>com.github.derdan.explorerextension</id>
    <name>ExplorerExtension</name>
    <vendor>derdan</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="SRecord File" implementationClass="com.github.derdan.explorerextension.SRecordFileType"
                  fieldName="INSTANCE" language="SRecord" extensions="srec"/>
        <lang.parserDefinition language="SRecord"
                               implementationClass="com.github.derdan.explorerextension.SRecordParserDefinition"/>
        <lang.syntaxHighlighter language="SRecord"
                                implementationClass="com.github.derdan.explorerextension.SRecordSyntaxHighlighter"/>
        <codeInsight.inlayProvider language="SRecord"
                                   implementationClass="com.github.derdan.explorerextension.SRecordInlayHintsProvider"/>
        <annotator language="SRecord"
                   implementationClass="com.github.derdan.explorerextension.annotator.SRecordAnnotator"/>
    </extensions>

</idea-plugin>
